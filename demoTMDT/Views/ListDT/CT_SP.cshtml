@model demoTMDT.Models.DienThoai

@{
    ViewBag.Title = "CT_SP";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cmt = (List<demoTMDT.Models.Comment>)ViewBag.cmt;
}

<link href="~/Content/Customer/ProductDetails.css" rel="stylesheet" />
<style>
    /* comment */


    .main-cmt img {
        position: absolute;
        width: 50px;
        height: 50px;
        padding: 0;
    }

    .body-cmt {
        margin-left: 70px;
    }

    .commentator p {
        font-weight: 600;
    }

    .name-product p {
        font-weight: 600;
        color: #5f5e5e;
    }

    .children {
        background-color: #f5f5f5;
        list-style-type: none;
        padding: 20px;
    }

        .children li:before {
            position: absolute;
            top: 440px;
            left: 30px;
            width: 0px;
            height: 0px;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 10px solid #f5f5f5;
            content: " ";
        }


</style>
<script>
    $(document).ready(function () {
        var src_img_click;
        $(".item a").click(function () {
            src_img_click = $(this).children("img").attr("src");
            $(".img-product img").attr('src', src_img_click);
            return false;
        });
    });
</script>

<div class="container mt-5" style="background-color: white;">
    <div class="content">
        <div class="title-product py-1 pl-4">
            <h1>@Html.DisplayFor(model => model.TenDT)</h1>
        </div>
        <div class="row">
            <div class="col-md-5 img-product">
                <img src=" @Url.Content(Model.hinh1)" height="200" width="200" />
                <div class="d-flex" style="justify-content:space-between">
                    <div class="item">
                        <a href="" style="text-decoration: none;">
                            <i class="far fa-images"></i>
                            <p>Thư viện</p>
                        </a>
                    </div>
                    <div class="item">
                        <a href="" style="text-decoration: none;">
                            <i class="fas fa-film"></i>
                            <p>Video</p>
                        </a>
                    </div>
                    <div class="item">
                        <a href="" style="text-decoration: none;">
                            <i class="far fa-file-alt"></i>
                            <p>Tin tức</p>
                        </a>
                    </div>
                    <div class="item">
                        <a href="" style="text-decoration: none;">
                            <i class="far fa-comments"></i>
                            <p>Đánh giá</p>
                        </a>
                    </div>
                </div>
                <div class="detail-product">
                    <b>Mô tả sản phẩm:</b>
                    <p>
                        Máy mới nguyên seal Fullbox chính hãng VN/A, chưa Active. Bảo hành 12 tháng tại trung tâm
                        bảo hành ủy quyền chính hãng.
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <span class="price">@Html.DisplayFor(model => model.Gia)đ</span>
                <form action="">
                    <div class="delivery d-flex">
                        <img src="https://clickbuy.com.vn/assets/arrow_right.png" alt="">
                        <img src="https://clickbuy.com.vn/assets/arrow_right.png" alt="">
                        <img src="https://clickbuy.com.vn/assets/arrow_right.png" alt="">
                        <span>ClickBuy Now - Giao hàng siêu tốc 1h</span>
                    </div>
                    <div class="d-flex" style="justify-content:space-between; margin-top: 20px;">
                        <div class="item">
                            <a href="" style="text-decoration: none;">
                                <p class="reset-size"> @Html.DisplayFor(model => model.mau3)</p>
                                <img src=" @Url.Content(Model.hinh3)" />
                            </a>
                        </div>
                        <div class="item">
                            <a href="" style="text-decoration: none;">
                                <p class="reset-size"> @Html.DisplayFor(model => model.mau2)</p>
                                <img src=" @Url.Content(Model.hinh2)" />
                            </a>
                        </div>
                        <div class="item">
                            <a href="" style="text-decoration: none;">
                                <p class="reset-size"> @Html.DisplayFor(model => model.mau1)</p>
                                <img src=" @Url.Content(Model.hinh1)" />
                            </a>
                        </div>
                    </div>
                    <div class="insurance mt-3 d-flex">
                        <b>Bảo hành:</b>
                        <p> iCare - 1 đổi 1 trong 1 năm</p>
                    </div>
                    <div class="promotion">
                        <h5 class="p-3">KHUYẾN MÃI</h5>
                        <div class="textwidget">
                            <ul>
                                <li><i class="fas fa-gift"></i>Thu cũ đổi mới – Trợ giá 1.000.000đ </li>
                                <li><i class="fas fa-gift"></i>Giảm thêm 1% cho khách hàng cũ </li>
                                <li><i class="fas fa-gift"></i>Giảm giá 5% khi mua phụ kiện</li>
                                <li>
                                    <i class="fas fa-gift"></i>Tặng phiếu mua hàng trị giá 200.000đ sử dụng khi
                                    mua laptop
                                </li>
                            </ul>
                        </div>
                    </div>
                    <a href="/GioHang/AddTo/@Model.IdDT" class="button-submit mt-4 d-flex" style="color:#fff; text-decoration:none;">
                        <i class="fas fa-cart-arrow-down"></i>
                        <div>
                            <span>MUA NGAY</span>
                            <span>GIAO HÀNG TẬN NƠI</span>
                        </div>
                    </a>
                    <div class="hotline mt-3">
                        <p class="reset-size">Gọi <span>096.606.2468</span> hoặc <span>0246.328.9494</span></p>
                        <p class="reset-size">để được tư vấn (Từ 8:00 - 22:00)</p>
                    </div>
                </form>
            </div>
            <div class="col-md-3">
                <div class="commit p-1">
                    <h5>CLICKBUY CAM KẾT</h5>
                    <div class="textwidget">
                        <ul>
                            <li><i class="fas fa-thumbs-up" style="color: yellowgreen;"></i>Clickbuy Cam kết máy bán ra chính hãng VN/A. Giá đã bao gồm VAT</li>
                            <li><i class="fas fa-thumbs-up" style="color: yellowgreen;"></i>Bảo hành 12 tháng tại trung tâm bảo hành ủy quyền chính hãng</li>
                        </ul>
                    </div>
                </div>
                <div class="branch-system p-1 mt-4">
                    <h5>HỆ THỐNG CỬA HÀNG</h5>
                    <div class="textwidget">
                        <ul>
                            <li><i class="fas fa-map-marked" style="color: yellowgreen;"></i>Clickbuy Cam kết máy bán ra chính hãng VN/A. Giá đã bao gồm VAT</li>
                            <li><i class="fas fa-map-marked" style="color: yellowgreen;"></i>Bảo hành 12 tháng tại trung tâm bảo hành ủy quyền chính hãng</li>
                        </ul>
                    </div>
                </div>
                <div class="endow p-1 mt-4">
                    <h5>ƯU ĐÃI TRẢ GÓP</h5>
                    <div class="textwidget">
                        <ul>
                            <li><i class="fas fa-check-circle" style="color: yellowgreen;"></i>Clickbuy Cam kết máy bán ra chính hãng VN/A. Giá đã bao gồm VAT</li>
                            <li><i class="fas fa-check-circle" style="color: yellowgreen;"></i>Bảo hành 12 tháng tại trung tâm bảo hành ủy quyền chính hãng</li>
                        </ul>
                    </div>
                </div>
                <div class="payments p-1 mt-4">
                    <h5>PHƯƠNG THỨC THANH TOÁN</h5>
                    <div class="textwidget d-flex" style="justify-content:space-around">
                        <img src="https://clickbuy.com.vn/assets/visa.png" alt="">
                        <img src="https://clickbuy.com.vn/assets/tienmat.png" alt="">
                        <img src="https://clickbuy.com.vn/assets/internetbanking.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
<div class="container mt-4 mb-4">
    <div class="row pb-5" style="background-color: white;">
        <div class="col-md-8">
            <div class="general-content">
                <h5 class="p-3">Đánh giá chi tiết</h5>
                
            </div>
            @foreach (var x in cmt)
            {
                if (x.Parent == null)
                {
                    <div class="comment">
                        <div class="main-cmt">
                            <img src="https://static.yeah1.com/uploads/editors/27/2020/03/21/JaZBMzV14fzRI4vBWG8jymplSUGSGgimkqtJakOV.jpeg"
                                 alt="">
                            <div class="body-cmt">
                                <div class="commentator d-flex">
                                    <p>@Html.DisplayFor(model => x.TenKH)</p>
                                    <span>-</span>
                                    <p>@Html.DisplayFor(model => x.NgayCMT)</p>
                                </div>
                                <div class="name-product d-flex">
                                    <p>Tên Sản Phẩm:</p>
                                    <p>@Html.DisplayFor(model => x.TenSP)</p>
                                </div>
                                <div class="cmt">
                                    <p>@Html.DisplayFor(model => x.Comment1)</p>
                                </div>
                            </div>
                        </div>
                        @{Html.RenderAction("_ChildComment", "ListDT", new { id = x.ID });}
                        
                    </div>
                }
            }
            <a href="/ListDT/Create" class="btn btn-danger" style="float:right;">Viết bình luận</a>
        </div>
        <div class="col-md-4">
            <div class="tablespec">
                <h5 class="p-3">Thông số kỹ thuật</h5>
